<div class='container border'>

  <div class='row'>
    <h1 class='col' align='center'>Task Report</h1>
  </div>

  <br>

  <table class='table'>
    <thead>
      <tr>
        <th scope='col'>ID</th>
        <th scope='col'>Title</th>
        <th scope='col'>Priority</th>
        <th scope='col'>Comment</th>
        <th scope='col'>User</th>
        <th scope='col'>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <th scope='row'><%= link_to comment.task.id, task_path(comment.task) %></th>
          <td><%= comment.task.title %></td>
          <td><%= comment.task.priority %></td>
          <td><%= comment.body %>
          <td>
            <% if current_user == comment.user || comment.user.profile.share %>
              <%= link_to comment.user.email, profile_path(comment.user.profile) %>
            <% else %>
              Private
            <% end %>
          </td>
          <td><%= comment.task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>